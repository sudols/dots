(deflisten battery :initial "{\"status\": \"unknown\", \"percent\": 0, \"icon\": \"ï‰„\"}" `./bar/scripts/battery.sh`)

(defwidget battery []
  (box :class "battery"
       :orientation "h"
       :space-evenly false
       :tooltip "${battery.percent}% ${battery.status}"
    (label :class "bat-i" :text "${battery.icon}")
    (label :class "bat-t" :text "${battery.percent}%")
  )
)
